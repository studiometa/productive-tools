  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.1.0-beta.4",
    "typescript": "^5.8.3",
    "vite": "^8.0.0-beta.14",
    "vitest": "^4.1.0-beta.4"
  }
}
