{
  "name": "@studiometa/productive-api",
  "version": "0.10.0",
  "description": "Productive.io API client, types, and formatters",
  "keywords": [
    "api",
    "client",
    "productive",
    "project-management"
  ],
  "license": "MIT",
  "author": "Studio Meta",
  "repository": {
    "type": "git",
    "url": "https://github.com/studiometa/productive-tools",
    "directory": "packages/api"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
