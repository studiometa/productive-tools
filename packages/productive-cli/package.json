{
  "name": "@studiometa/productive-cli",
  "version": "0.8.5",
  "description": "CLI tool for interacting with Productive.io API - optimized for AI agents and humans",
  "keywords": [
    "ai-agent",
    "api",
    "automation",
    "cli",
    "productive",
    "project-management"
  ],
  "license": "MIT",
  "author": "Studio Meta",
  "repository": {
    "type": "git",
    "url": "https://github.com/studiometa/productive-tools",
    "directory": "packages/productive-cli"
  },
  "bin": {
    "productive": "./dist/cli.js"
  },
  "files": [
    "dist",
    "skills"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && tsc --emitDeclarationOnly && node scripts/postbuild.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ci": "vitest run --coverage",
    "lint": "oxlint src",
    "format": "oxfmt --write src",
    "format:check": "oxfmt --check src",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@vitest/coverage-v8": "^4.0.18",
    "memfs": "4.56.2",
    "oxlint": "^1.43.0",
    "typescript": "^5.7.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
