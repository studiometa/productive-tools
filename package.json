{
  "name": "@studiometa/productive-cli",
  "version": "0.1.1",
  "description": "CLI tool for interacting with Productive.io API - optimized for AI agents and humans",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "productive": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && tsc --emitDeclarationOnly && node scripts/postbuild.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ci": "vitest run --coverage",
    "lint": "oxlint src",
    "format": "oxlint --fix src",
    "format:check": "oxlint src",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "productive",
    "cli",
    "project-management",
    "api",
    "ai-agent",
    "automation"
  ],
  "author": "Studio Meta",
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@vitest/coverage-v8": "^2.1.9",
    "oxlint": "^0.16.1",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vitest": "^2.1.8"
  }
}
